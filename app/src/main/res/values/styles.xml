<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MojCiemny" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MojJasny" parent="AppTheme">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="JasnyZMotywem" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogStyle.Light</item>
    </style>

    <style name="CiemnyZMotywem" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/white</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogStyle</item>
        <item name="android:timePickerStyle">@style/MyTimePickerWidgetStyle</item>
        <item name="materialClockStyle">@style/MyTimePickerWidgetStyle</item>
    </style>

    <style name="MyTimePickerDialogStyle.Light" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="showTitle">false</item>
        <item name="colorControlActivated">#ffd600</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#43a047</item>
        <item name="android:textColorSecondary">#ff00ff</item>
    </style>

    <style name="MyTimePickerDialogStyle" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="showTitle">false</item>
        <item name="colorControlActivated">#ffd600</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#43a047</item>
        <item name="android:textColorSecondary">#f44336</item>
    </style>

    <style name="MyTimePickerWidgetStyle" parent="Widget.MaterialComponents.TimePicker.Clock">
        <item name="android:headerBackground">@color/colorAccent</item>
        <item name="android:numbersTextColor">#43a047</item>
        <item name="android:numbersSelectorColor">#ffd600</item>
        <item name="android:numbersBackgroundColor">#000000</item>
        <item name="android:amPmTextColor">#000000</item>
        <item name="clockFaceBackgroundColor">#000000</item>
        <item name="clockHandColor">#000000</item>
        <item name="clockNumberTextColor">#000000</item>
    </style>
</resources>